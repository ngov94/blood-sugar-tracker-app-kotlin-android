<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/bsr_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_margin="4dp"
        app:cardCornerRadius="10dp"
        android:elevation="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sugar_conc_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:text="5.2"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sugar_unit_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sugar_conc_card"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:text="mmol/L"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="2022-05-04"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/time_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@id/date_card"
                android:text="7:00 am"
                android:textColor="@color/black"
                android:textSize="15sp"
                />

            <View
                android:layout_width="160dp"
                android:layout_height="2dp"
                android:layout_marginStart="8dp"
                android:layout_below="@id/date_card"
                android:layout_marginTop="2dp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/measuredTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/date_card"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:text="Measured: "
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/measured_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Measured"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_below="@id/date_card"
                android:layout_toRightOf="@id/measuredTitle"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:id="@+id/notesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/measuredTitle"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:text="Notes: "
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/notes_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/measured_card"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="100dp"
                android:layout_toRightOf="@id/notesTitle"
                android:text="Notes"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/bsid_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/mid_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>